<%= form_with(model: @request, local: true) do |form| %>
  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(request.errors.count, "error") %> prohibited this request:</h2>

      <ul>
        <% @request.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="text-field">
    <%= form.label :sent_by %>
    <%= form.text_field :sent_by %>
  </div>
  <div class="text-field">
    <%= form.label :sent_to %>
    <%= form.text_field :sent_to %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>