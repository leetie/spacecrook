<div class="row">
  <div class="col">
    <% @requests.each do |request| %>
      <p class="text-muted">Friend request from <%=User.find(request.sent_by).name %></p>
      <div class="btn-group">
        <%#= link_to raw("<i class=\"far fa-thumbs-up\"></i>"), , method: :post %>
        <%= link_to raw("<button class=\"btn btn-primary\" type=\"button\">Accept</button>"), controller: "requests", action: "accept", sent_by: request.sent_by, sent_to: request.sent_to%>
        <%= link_to raw("<button class=\"btn btn-danger\" type=\"button\">Deny</button>"), controller: "requests", action: "deny"%>
      </div>
    <% end %>
  </div>
</div>
