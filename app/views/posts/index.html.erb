<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col">
    <% if @user.id == current_user.id %>
      <h1>Your Feed</h1>
    <% else %>
      <h1><%= @user.name %>'s Feed</h1>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-3">
    <% if @user.id == current_user.id %>
      <%= link_to "Edit", edit_user_registration_path%>
    <% end %>
  </div>
</div>
<%= render partial: "post", collection: @posts %>
<br>
<% if current_user %>
  <% if current_user.id == @user.id %>
  <div class="row">
    <div class="col">
    </div>
    <div class="col d-flex justify-content-center">
        <%=  link_to 'New post', new_user_post_path(current_user.id), class: "btn btn-primary" %>
    </div>
    <div class="col">
    </div>
  </div>
  <% end %>
<% end %>

