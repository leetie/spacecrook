<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <p>Posted by <%= User.find(post.user_id).email %>!</p>
        <%= post.body %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
        <%=  link_to 'New post', new_user_post_path %>

